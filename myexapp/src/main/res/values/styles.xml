<resources>

    <style name="AppTheme" parent="MyTheme.Base">
    </style>
    <style name="MyTheme.Base" parent="android:Theme.Holo.Light.DarkActionBar">
       <item name="android:actionBarStyle">@style/ExActionBar</item>
       <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
       <item name="android:popupMenuStyle">@style/ExActionBarPopup</item>
    </style>

    <!-- Action bar style -->
    <style name="ExActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/purple_500</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- name="android:background">@drawable/actionbar_tab_selector</item -->
    </style>

    <!-- Overflow drop down style -->
    <style name="ExActionBarPopup" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:background">@color/purple_500</item>
    </style>


</resources>
