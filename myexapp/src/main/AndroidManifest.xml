<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lu.crghost.myex" >

    <application
        android:name=".MyExApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings" />
        <activity
            android:name=".DebtorsEditActivity"
            android:label="@string/debtors_title" >
        </activity>
        <activity
            android:name=".AccountsEditActivity"
            android:label="@string/accounts_title" >
        </activity>
        <activity
            android:name=".CostcentersEditActivity"
            android:label="@string/title_activity_costcenters_edit" >
        </activity>

        <provider
            android:name=".TransactionsProvider"
            android:authorities="lu.crghost.myex.trans"
            android:exported="false" />

        <activity
            android:name=".TransactionsEditActivity"
            android:label="@string/title_activity_transactions_edit" >
        </activity>
    </application>

</manifest>
